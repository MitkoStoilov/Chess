<!DOCTYPE html>
<html lang = "en">
    <head>
      <title>Profile</title>
      <meta charset="UTF-8">
      <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
      <script src="http://code.jquery.com/jquery-1.12.4.js" ></script>
      <script src="http://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
      <script>
        $.getJSON('http://localhost:3000/profile/status', function (json) {
          $('#vCount').html(json.victories);
          $('#lCount').html(json.losses);
          $('#user').html(json.user);
          const url = "/profile/image/" + $('#user').text();
          $('#linkImg').attr("href", url);
        });
      </script>
    </head>
    <body>
        <form action="/profile/upload" method="POST" enctype="multipart/form-data">
          <input type="file" name="file" id="file">
          <label for="file">Change picture</label>

          <input type="submit"value="Submit">
        </form>
      <div id = "container">
        <p id="user"></p>
        <p id="victories">Victories: <b id="vCount"></b></p>
        <p id="losses">Losses: <b id="lCount"></b></p>
      </div>
      <a href="/logout">Logout</a><br/>
      <a href="/">Home</a>
      <a href="/old/all">Games</a>
      <a id="linkImg" href="/profile/image/test">Img</a>
    </body>
</html>
