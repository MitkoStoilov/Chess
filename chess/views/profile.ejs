      <script>
        $.getJSON('http://localhost:3000/profile/status', function (json) {
          $('#vCount').html(json.victories);
          $('#lCount').html(json.losses);
          $('#user').html(json.user);
          $('#draws').html(json.draws);
          const url = "/profile/image/" + $('#user').text();
          $('#linkImg').attr("href", url);
        });
      </script>
    </head>
